<nav class="nav-bar">
  {{#if isFirstPage}}
    {{#link-to first}}
      <button {{action "onPageChange"}} class="nav-button">
        &#xab; First
      </button>
    {{/link-to}}
    {{#link-to prev}}
      <button {{action "onPageChange"}} class="nav-button">
        &#x2c2; Prev
      </button>
    {{/link-to}}
  {{else}}
    <button disabled="disabled" class="nav-button">&#xab; First</button>
    <button disabled="disabled" class="nav-button">&#x2c2; Prev</button>
  {{/if}}
  <p class="nav-guide">Page {{pageNumber}} of 5</p>
  {{#if isLastPage}}
    {{#link-to next}}
      <button {{action "onPageChange"}} class="nav-button">
        Next &#x2c3;
      </button>
    {{/link-to}}
    {{#link-to "page5"}}
      <button {{action "onPageChange"}} class="nav-button">
        Last &#xbb;
      </button>
    {{/link-to}}
  {{else}}
    <button disabled="disabled" class="nav-button">Next &#x2c3;</button>
    <button disabled="disabled" class="nav-button">Last &#xbb;</button>
  {{/if}}
</nav>
{{yield}}