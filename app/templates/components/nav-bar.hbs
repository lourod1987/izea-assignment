{{!-- if isFirstPage is true render disabled buttons  --}}
<nav class="nav-bar">
  {{#if isFirstPage}}
    <button disabled="disabled" class="nav-button" id="disabled-first">&#xab; First</button>
    <button disabled="disabled" class="nav-button" id="disabled-prev">&#x2c2; Prev</button>
  {{else}}
    {{#link-to first}}
      <button class="nav-button" id="first">
        &#xab; First
      </button>
    {{/link-to}}
    {{#link-to prev}}
      <button class="nav-button" id="prev">
        &#x2c2; Prev
      </button>
    {{/link-to}}
  {{/if}}
  <p class="nav-guide">Page {{pageNumber}} of 5</p>
  {{!-- if isLastPage is true render disabled buttons  --}}
  {{#if isLastPage}}
    <button disabled="disabled" class="nav-button" id="disabled-next">Next &#x2c3;</button>
    <button disabled="disabled" class="nav-button" id="disabled-last">Last &#xbb;</button>
  {{else}}
    {{#link-to next}}
      <button class="nav-button" id="next">
        Next &#x2c3;
      </button>
    {{/link-to}}
    {{#link-to last}}
      <button class="nav-button" id="last">
        Last &#xbb;
      </button>
    {{/link-to}}
  {{/if}}
</nav>
{{yield}}
